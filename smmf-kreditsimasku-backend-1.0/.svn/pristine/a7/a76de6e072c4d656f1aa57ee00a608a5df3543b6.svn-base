<script language="javascript">

function cek(){
	if(document.forms[0].oldPassword.value!=""){
		
		if(document.forms[0].newPassword.value==""){
			alert("New Password is required");
			document.forms[0].newPassword.focus();
			return false;
		}
		if(document.forms[0].confirmNewPassword.value==""){
			alert("Confirm New Password is required");
			document.forms[0].confirmNewPassword.focus();
			return false;
		}
		if(document.forms[0].oldPassword.value==document.forms[0].newPassword.value){
			alert("Old Password is match with New Password");
			return false;
		}
		if(document.forms[0].confirmNewPassword.value!=document.forms[0].newPassword.value){
			alert("New Password is not match with Confirm New Password");
			return false;
		}

	}
	return true;
}

function encryptChecker(){
	if(document.forms[0].newPassword.value != null)
		{
			var pass = document.forms[0].newPassword.value;
			var checker = pass.includes("SMMF");
			if(checker == true)
			{
				document.forms[0].newPassword.value="";
				alert('mohon tidak menggunakan kata SMMF pada password!');
			}
		}
}
</script>